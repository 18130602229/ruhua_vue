.black .container {
  background-color: #000000;
  position: fixed;
  top: 0;
  opacity: 0.6;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.t_con {
  background-color: #fff;
  position: fixed;
  top: 120px;
  left: 10%;
  width: 80%;
  padding: 20px;
  border-radius: 5px;
  z-index: 1999;
  min-height: 370px;
  overflow: hidden;
}
.t_con .t_c_tit {
  font-size: 16px;
  text-align: center;
  font-weight: 600;
  padding-bottom: 10px;
}
.t_con .t_c_con {
  font-size: 14px;
  color: #868686;
}
.t_con .t_c_more {
  text-align: center;
  color: #868686;
  padding: 15px 0 10px;
  font-size: 14px;
}
.t_con .t_c_more ._span {
  color: #4B73CE;
}
.t_con .t_c_btn .t_c_btn_01 {
  height: 35px;
  line-height: 35px;
  color: #fff;
  border-radius: 20px;
  text-align: center;
  font-size: 14px;
  margin-top: 10px;
}
.t_con .t_c_btn .bg_red {
  background-color: #F00D3B;
}
.t_con .t_c_btn .bg_gery {
  background-color: #CCCCCC;
}

